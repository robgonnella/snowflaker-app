{
  "name": "Snowflaker-App",
  "author": "Rob Gonnella",
  "version": "1.0.1",
  "description": "Simple app for generating unique file name and storing mappings",
  "main": "dist/app.js",
  "scripts": {
    "start": "NODE_ENV=development electron dist/app.js",
    "build": "rm -rf dist/ && mkdir dist && cp -r static/* dist && webpack",
    "dev-server": "npm run build && webpack-dev-server --colors --content-base static",
    "dev": "NODE_ENV=development DEVSERVER=true npm start",
    "pack": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/csvtojson": "^1.1.5",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/redux": "^3.6.0",
    "css-loader": "^0.28.9",
    "electron": "^1.8.4",
    "electron-builder": "^20.8.0",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.4.2",
    "node-loader": "^0.6.0",
    "node-sass": "^4.7.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "resolve-url-loader": "^2.2.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "ts-loader": "^3.3.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "build": {
    "appId": "com.snowflaker.app",
    "productName": "Snowflaker",
    "directories": {
      "output": "package",
      "buildResources": "static/assets/icons"
    },
    "mac": {
      "category": "public.app-category.business",
      "icon": "snowflake.png.icns",
      "target": [
        "pkg",
        "dmg"
      ]
    }
  }
}
